*
    outline-width       0
    
body
    fill-abs()
    margin              0
    overflow            hidden
    -webkit-user-select none
    
#main
    position            absolute
    bottom              0
    right               0
    left                0
    top                 titlebarHeight
    scroll              none
    overflow            hidden
    pointer-events      auto
    font-size           14px
    font-family         titlebarFont
    
.row
    display             flex
    justify-content     center
    background-image    url("../../img/board.png")
    background-repeat   repeat, no-repeat
    background-size     contain
    background-position-x  center

.board
    position            relative

.wood
    opacity             0
    
.wood
.blank
    height              100%

.blank
    fill-abs()
    background-color    #666
    
.lines
    position            absolute
    height              100%
    left                0
    
.shadows
.stones
    display             contents
    
.shadow
.stone
    position            absolute
    
.highlts
    fill-abs()

.numbers
.liberties
.legends
    fill-abs()
    
.hover
    &.white
        background-color    #fff8
        border              2px solid #fff8
    &.black
        background-color    #0008
        border              2px solid #0008
    position            absolute
    display             block
    transform           translate(-50%, -50%)

.last
    &.white
        border          5px solid rgb(240,220,110)
        opacity         0.5
    &.black
        border          5px solid rgb(150,150,0)
        opacity         0.5
    position            absolute
    display             block
    transform           translate(-50%, -50%)
    
.eye
.number
.liberty
.legend
    position            absolute
    color               black
    font-size           11px
    font-family         titlebarFont
    transform           translate(-50%, -50%)
    
.number
    text-align          center
    line-height         1.56
    &.black
        color               white
    &.white
        color               black

.liberty.black
    color               white

.eye.w
.eye.W
    background-color    white

.eye.b
.eye.B
    background-color    black
    
