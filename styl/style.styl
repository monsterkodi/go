bgColor             = #181818
frameColor          = #111111
frameWidth          = 6px
titlebarHeight      = 30px
titlebarFontSize    = 15px

@font-face 
    font-family     titlebarFont
    font-weight     normal
    font-style      normal
    src             url("../../node_modules/kxk/styl/Bahnschrift.woff")

@font-face 
    font-family     fontMono
    font-weight     bold
    font-style      bold
    src             url("../../node_modules/kxk/styl/Meslo.woff")
    
fill-abs()
    position            absolute
    bottom              0
    right               0
    left                0
    top                 0
    
board-img()
    background-image    url("../../img/board.png")

