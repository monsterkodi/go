.board
    position            relative

.wood
    opacity             0
    width               auto
    
.wood
.blank
    height              100%

.blank
    fill-abs()
    background-color    rgb(242,200,113)
    opacity             0.5
    
.lines
    position            absolute
    height              100%
    left                0
    
.shadows
.stones
    display             contents
        
.shadow
.stone
    position            absolute
    
.highlts
    fill-abs()

.numbers
.liberties
.territory
.variations
.coordinates
    fill-abs()
    
.hover
    &.white
        background-color    #fff8
    &.black
        background-color    #0008
    position            absolute
    display             block
    transform           translate(-50%, -50%)

.last
    &.white
        border          5px solid rgb(240,220,110)
        opacity         0.5
    &.black
        border          5px solid rgb(150,150,0)
        opacity         0.5
    position            absolute
    display             block
    transform           translate(-50%, -50%)
    
.eye
.number
.varpos
.variation
.liberty
.coordinate
    position            absolute
    color               black
    font-family         titlebarFont
    transform           translate(-50%, -50%)

.liberty
    font-size           13px

.variation
.varpos
.number
    text-align          center
    line-height         1.56
    &.black
        color               #faeeea
    &.white
        color               black
    &.empty
        filter              drop-shadow(2px 2px 2px #0008)
        
.liberty.black
    color               white

.variation
    &.black
        background-color    black
    &.white
        background-color    #faeeea
     
.eye
    border-radius       100%
    
.eye.b
    filter              drop-shadow(2px 2px 2px #0008)
    background-color    black
    opacity             0.85

.eye.w
    filter              drop-shadow(2px 2px 2px #0008)
    background-color    #faeeea
    opacity             0.9
    
