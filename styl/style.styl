.games
.varee
    background-color        rgba(80,30,0,0.05)
    box-shadow              inset 1px 1px 6px rgba(80,30,0,0.8)
    border-radius           6px
    position                absolute
    border                  2px solid
    border-left-color       #1001
    border-top-color        #1001
    border-bottom-color     #ff04
    border-right-color      #ff04
    overflow                hidden
    & .stones    
    & .highlts    
        position            absolute
        display             block

.varee
    overflow                auto
    
.games
    & .stones
        display             contents
        
    line-height             1
    padding                 12px
    box-sizing              border-box
    overflow                auto
        
.game
    margin-top              20px
    margin-left             20px
    display                 inline-block
    white-space             nowrap
    border-radius           6px
    padding                 12px
    
.gameboard
    position                relative

.gameIcon
    width                   64px
    height                  64px
    border-radius           6px
    &.black    
        margin-right        2px
        border              2px solid black
    &.white
        border              2px solid white
        
    
.gameRank   
    padding-left            12px
    vertical-align          top
        
.gameLink
    color                   #a00
    &:hover    
        color               #fff
        
.gameRank    
    font-size               16px
    &.black    
        color               black
    &.white    
        color               white
        
.gameName
    font-size               24px
    color                   #a00
    margin-left             -20px
            
.varii
    position                absolute
    display                 block
    text-align              center
    line-height             50px
    width                   50px
    height                  50px
    background-size         contain
    &.black
        color               #faeeea
        background-image    url("../../img/varii_black.png")
    &.white
        color               black
        background-image    url("../../img/varii_white.png")
    background-position-x   3.1px
    background-position-y   2.5px
    
.cursor
    &.white
        border          10px solid rgb(150,150,0)
        opacity         0.9
    &.black
        border          10px solid rgb(150,150,0)
        opacity         0.9
    position            absolute
    display             block
    transform           translate(-50%, -50%)
    width               30px
    height              30px
    border-radius       30px
        
.treelines
    position            absolute
    transform           scale3d(0.5, 0.5, 1) translate3d(-50%, -50%, 0px)
    
.chatline
    font-size           16px
    position            absolute
    padding             6px
    user-select         text
    &.black
        color           black
        filter          drop-shadow(0px 1px 1px #0008)
    &.white
        color           white
        filter          drop-shadow(0px 1px 1px #000d)
    &.myself
        color           rgba(0,0,0,0.5)
        filter          drop-shadow(0px 1px 1px #0008)
    &::selection 
      // color:            red
      background:       yellow
.talk
    position            absolute
    left                80px
    right               6px
    & .input
        border              none
        font-size           16px
        padding             6px
        color               rgba(0,0,0,0.5)
        filter              drop-shadow(0px 1px 1px #0008)
        background-color    transparent
        -webkit-user-select text
        -webkit-app-region  no-drag
        pointer-events      all
        width               98%
        &::selection 
          color:            red
          background:       yellow
        &:focus
            box-shadow          inset 1px 1px 3px rgba(80,30,0,0.3)
            border-radius       6px    
        
