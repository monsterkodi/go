#titlebar
    display             flex
    flex-direction      row
    height              titlebarHeight
    box-sizing          border-box
    font-size           titlebarFontSize
    font-family         titlebarFont
    white-space         nowrap
    cursor              pointer

.titlebar-title
    font                titlebarFont
    flex                1 1
    
.row
    board-img()
    display             flex
    justify-content     center
    background-position-x  center
    background-position-y  -24px
    border-radius       6px
    
.gameInfo
    board-img()
    justify-content     center
    position            absolute
    left                50%
    transform           translate(-50%, 20%)
    & .black
        color           black
        filter          drop-shadow(0px 1px 1px #0008)
    & .white
        color           white
        filter          drop-shadow(0px 1px 1px #000d)
    background-position-x   center
    border-top-left-radius  6px
    border-top-right-radius 6px
    padding-left        6px
    padding-right       6px
    height              titlebarHeight
    display             flex
    flex-direction      row
    
.gameInfoLeft
.gameInfoRight
    flex                1 1 220px
    width               220px
    padding-left        3px
    padding-right       3px
.gameInfoLeft
    text-align          end
.gameInfoCenter         
    font-size           18px
    font-weight         bold
    flex                1 1
    & .redos
        filter          drop-shadow(0px 1px 1px #0008)
    
.score
    &.B
        color           black
        filter          drop-shadow(0px 1px 1px #0008)
    &.W
        color           white
        filter          drop-shadow(0px 1px 1px #000d)
    padding-left        3px
    padding-right       3px
        
.redos
.move
    color               #a20
    padding-left        3px
    padding-right       3px
    
.player

    padding-left        3px
    padding-right       3px
    font-size           17px
        
#titlebar .winicon img
    pointer-events      all
    padding-left        6px
    padding-top         3px
    width               22px
    height              22px
    
.winicon
    padding-top         2px
    
#titlebar .winbutton
    flex                0 0 45px
    display             inline-block
    text-align          center
    vertical-align      bottom
    font-size           18px
    padding-top         2px
    pointer-events      all
    &.minimize
        padding-top     5px

#titlebar .topframe
    height              2px
    position            absolute
    left                0
    top                 0
    right               135px
        
